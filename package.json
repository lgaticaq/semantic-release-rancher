{
  "name": "semantic-release-rancher",
  "description": "Set of semantic-release plugins for upgrade service in rancher",
  "version": "1.0.0",
  "engines": {
    "node": ">=8"
  },
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/semantic-release-rancher.git"
  },
  "bugs": {
    "url": "https://github.com/lgaticaq/semantic-release-rancher/issues"
  },
  "homepage": "https://github.com/lgaticaq/semantic-release-rancher#readme",
  "keywords": [
    "rancher",
    "semantic-release",
    "version"
  ],
  "scripts": {
    "lint": "eslint lib index.js",
    "prettier": "prettier --write --list-different '**/*.js?(on)'",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@eclass/rancher-for-ci": "^1.3.1",
    "@semantic-release/error": "^2.1.0",
    "execa": "^0.10.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^7.0.1",
    "@semantic-release/github": "^5.0.2",
    "@semantic-release/npm": "^5.0.2",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.5.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.3.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "prettier": "1.12.1",
    "semantic-release": "^15.9.9",
    "validate-commit-msg": "^2.14.0",
    "travis-deploy-once": "^5.0.2"
  },
  "peerDependencies": {
    "semantic-release": ">=11.0.0 <16.0.0"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": 2
    }
  },
  "files": [
    "lib",
    "index.js"
  ],
  "license": "MIT",
  "main": "index.js",
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "semi": false
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "success": false,
    "fail": false
  }
}
