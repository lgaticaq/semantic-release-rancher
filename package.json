{
  "name": "semantic-release-rancher",
  "version": "2.0.2",
  "description": "Set of semantic-release plugins for upgrade service in rancher",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard 'lib/**/*.js' 'index.js'",
    "test": "echo 'no test'"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/semantic-release-rancher.git"
  },
  "keywords": [
    "publish",
    "rancher",
    "release",
    "semantic-release",
    "version"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/semantic-release-rancher/issues"
  },
  "homepage": "https://github.com/lgaticaq/semantic-release-rancher#readme",
  "dependencies": {
    "@eclass/rancher-for-ci": "^2.0.0",
    "@semantic-release/error": "^2.1.0",
    "promise-sequential": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "@eclass/eslint-config": "1.3.0",
    "@eclass/semantic-release-npm-github-config": "3.0.0",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "7.0.18",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-array-func": "3.1.3",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsdoc": "15.12.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.0.6",
    "lint-staged": "9.5.0",
    "prettier-standard": "16.1.0",
    "semantic-release": "15.14.0"
  },
  "peerDependencies": {
    "semantic-release": ">=11.0.0 <16.0.0"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ],
    "index.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "config:js-lib"
    ],
    "minor": {
      "automerge": true
    },
    "major": {
      "automerge": false
    }
  },
  "release": {
    "extends": "@eclass/semantic-release-npm-github-config"
  }
}
